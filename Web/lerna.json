{
  "tagVersionPrefix": "web_",
  "packages": [
    "packages/*"
  ],
  "version": "0.0.3",
  "npmClient": "npm",
  "command": {
    "bootstrap": {
      "npmClientArgs": [
        "--no-package-lock"
      ]
    },
    "publish": {
      "allowBranch": [
        "master",
        "release"
      ],
      "ignoreChanges": [
        "*.md",
        "lerna.json"
      ],
      "registry": "https://registry.npmjs.org/"
    },
    "npmClientArgs": [
      "--no-lockfile"
    ]
  }
}
